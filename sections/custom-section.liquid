<div class="full-width color-{{ section.settings.color_scheme }}">
  {% comment %} [START section.render_blocks] {% endcomment %}
  {% content_for 'blocks' %}
  {% comment %} [END section.render_blocks] {% endcomment %}
</div>

{% comment %} [START section.blocks] {% endcomment %}
{% schema %}
{
  "name": "Custom section",
  "class": "section--has-background",
  "blocks": [{ "type": "@theme" }, { "type": "@app" }],
  "settings": [
    {
      "type": "header",
      "content": "Color"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    }
  ],
  "presets": [
    {
      "name": "Custom section"
    },
    {
      "name": "Image with text",
      "blocks": [
        {
          "type": "image"
        },
        {
          "type": "group",
          "settings": {
            "color_scheme": "scheme-3"
          },
          "blocks": [
            {
              "type": "text",
              "settings": {
                "text": "<h1>Image with text</h1>"
              }
            },
            {
              "type": "text",
              "settings": {
                "text": "<p>Pair text with an image to focus on your chosen product, collection, or blog post.</p>"
              }
            }
          ]
        }
      ]
    }
  ]
}
{% endschema %}
{% comment %} [END section.blocks] {% endcomment %}
